{{#each products}}
  <li class="products-item">
    <img src="{{image}}" alt="{{description}}" class="products-image">
    <h3 class="products-name">{{name}}</h3>
    <p class="products-price"><b>Ціна: </b>{{price}} {{currency}}</p>
    <p class="products-desc">{{description}}</p>
    <p class="products-rating"><b>Рейтинг: </b>{{rating}}</p>
    <p class="products-reviews"><b>Кількість переглядів: </b>{{reviewsCount}}</p>
  </li>
{{/each}}